#!/bin/bash
usage()
{
   echo "Usage: make-script <script name> [-f | --force] [-e | --edit]"
}
edit=0
PARAMS=""
forceMake=0
sourceIt=0
while [ "$1" != "" ]; do
   case $1 in
      -e|--edit)  
         shift
         edit=1
         ;;
      -f|--force)  
         shift
         forceMake=1
         ;;
      -s|--source)  
         shift
         sourceIt=1
         ;;
      *)            
         PARAMS="$PARAMS $1"
         shift
         ;;
   esac
done
eval set -- "$PARAMS"

if [ "$1" != "" ]; then
   if [ -f ~/bin/$1 ] && [ $forceMake -eq 0 ]; then
      echo "Script $1 already exists"
   else
      echo "Making script $1..."
      cat ~/bin/starterTemplate.sh > ~/bin/$1
      echo "Providing permissions to script $1"
      chmod u+x ~/bin/$1
      if [ $sourceIt ]; then
         echo "Adding to sourceFiles.sh"
         echo source ~/bin/$1 >> sourceFiles.sh
      fi
      if [ $edit == 1 ]; then
         vim ~/bin/$1
      fi
   fi
else
   usage
fi

